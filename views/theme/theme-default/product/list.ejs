<div class="container">

    <% products.forEach(function(product, i){ %>
    <% if (i == 0 || i == 4 || i == 8 || i == 12 || i == 16  ) { %>
    <div class="row">
        <% } %>
        <div class="col-sm-3 col-md-3">
            <div class="thumbnail">
                <a href="/product/<%= product.id %>">
                    <% if (product.image ){ %>
                    <img class="img-rounded-ymple" src="/images/product/<%= product.idProduct %>/1.png">
                    <% }else { %>
                    <img class="img-rounded-ymple" src="/images/new_prod_trans.jpg">
                    <% } %>
                </a>

                <%# if (product.thumbnail){ %>
                <%#  product.thumbnail  } else {  "http://lorempixel.com/500/500" } %>
                <div class="caption text-left">
                    <h3><%= product.name %></h3>

                        <span class="badge badge-info pull-right"><%= sails.config.project.currency.symbol %>
                            <%= product.price %>
                        </span>
                    </h3>

                    <p class="ellipsis"> <%= product.description %> </p>

                    <div>
                        <select class="" name="quantity" id = "quantity-<%= product.id %>">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                        </select>

                        <button data-id="<%= product.id %>"   data-role="add" class="btn btn-default btn-sm"><%= __('Add') %></button>
                        <button data-id="<%= product.id %>" data-role="buy"   class="btn btn-primary btn-sm"><%= __('Purchase') %></button>
                    </div>
                    <br>
                </div>
            </div>
        </div>

        <% if ( i == 3 || i == 7 || i == 11 || i == 15  ) { %>
    </div>
    <br>
    <% } %>
    <% }) %>
</div>